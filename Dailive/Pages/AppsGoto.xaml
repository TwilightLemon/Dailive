<UserControl x:Class="Dailive.Pages.AppsGoto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dailive.Pages"
             mc:Ignorable="d" Width="100" Height="100">
    <Border Background="#7F000000" CornerRadius="{DynamicResource BorderCornerRadius}">
        <Grid >
            <Path x:Name="icon" Fill="WhiteSmoke" Stretch="Uniform" Width="50" Height="50" Margin="0,0,0,20" />
            <TextBlock x:Name="name" TextWrapping="Wrap" VerticalAlignment="Bottom" Foreground="WhiteSmoke" TextAlignment="Center" Margin="10,0,10,10"/>
        </Grid>
    </Border>
</UserControl>
